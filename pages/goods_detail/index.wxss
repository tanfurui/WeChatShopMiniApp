/* pages/goods_detail/index.wxss */
page {padding-bottom:var(--bottomBarHeight);}
.page_goods_detail swiper {height:70vw; text-align:center;}
.page_goods_detail swiper image {width:60%;}
.page_goods_detail .goods_price {padding:15px; font-size:18px; font-weight:bold; color:var(--themeColor);}
.page_goods_detail .goods_title_row {display:flex;}
.page_goods_detail .goods_title_row .goods_title {flex:5; color:#000; font-size:16px; padding:0 10px; display:-webkit-box; overflow:hidden; -webkit-box-orient:vertical; -webkit-line-clamp:2;}
.page_goods_detail .goods_title_row .goods_favorite {flex:1; display:flex; flex-direction:column; justify-content:center; align-items:center; border-left:solid 1px #000;}
.page_goods_detail .goods_title_row .goods_favorite .icon {background-color:var(--themeColor);}
.page_goods_detail .goods_introduce .introduce_title {font-size:16px; color:var(--themeColor); font-weight:bold; padding:20px;}
.page_goods_detail .bottom_bar {position:fixed; left:0; bottom:0; width:100%; height:var(--bottomBarHeight); background-color:#FFF; border-top:solid 1px #CCC; display:flex;}
.page_goods_detail .bottom_bar .bar_item {flex:1; display:flex; flex-direction:column; justify-content:center; align-items:center; font-size:12px;}
.page_goods_detail .bottom_bar .btn_cart, .page_goods_detail .bottom_bar .btn_buy {flex:2; color:#FFF; font-size:14px; font-weight:bold;}
.page_goods_detail .bottom_bar .btn_cart {background-color:#FFA500;}
.page_goods_detail .bottom_bar .btn_buy {background-color:#EB4450;}