/* 轮播图容器样式 */
swiper {width:100%; height:31.28vw;}
/* 轮播图图片样式 */
swiper image {width:100%;}

.index_cate {display:flex;}
.index_cate .navi {flex:1; padding:20px; text-align:center;}
.index_cate .navi image {width:100%;}
/* 楼层标题 */
.index_floor .floor_group .floor_title {font-size:20px; font-weight:bold; border-left:solid 4px var(--themeColor); margin:10px 0 10px 3px; padding-left:5px;}
.index_floor .floor_group .floor_title image {width:100%;}

.index_floor .floor_group .floor_list {display:flex; height:44.4vw;}
.index_floor .floor_group .floor_list .left {flex:1;}
.index_floor .floor_group .floor_list .right {flex:2;}
.index_floor .floor_group .floor_list .left, .index_floor .floor_group .floor_list .right {display:flex; flex-wrap:wrap;}
.index_floor .floor_group .floor_list .navi {padding:3px;}
.index_floor .floor_group .floor_list .navi image {width:100%; height:100%; border-radius:4px;}
.index_floor .floor_group .floor_list .left .navi {width:100%; height:100%;}
.index_floor .floor_group .floor_list .right .navi {width:50%; height:50%;}